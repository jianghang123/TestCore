@model TestCore.Domain.SysEntity.Admin
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>管理面板-菠萝妹</title>
    <link href="~/common/bootstrap.min.css" rel="stylesheet" />
    <link href="~/common/app.css" rel="stylesheet" />
    <link href="~/common/datetimepicker.min.css" rel="stylesheet" />
</head>

<body>
    <div style="position:fixed;left:40%;z-index:999">
        <div class="woody-prompt">
            <div class="prompt-error alert alert-danger">
            </div>
        </div>
    </div>
    <div id="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-8">
                    <div class="logo">
                        <a href="javascript:;" id="home" style="text-decoration:none">
                            <img src="~/images/tlogin.png" style="width:188px;height:70px;  " />
                            &nbsp;
                            <span class="label label-danger">
                                管理面板
                            </span>
                        </a>
                    </div>
                </div>
                <div class="col-md-8 col-sm-8 col-xs-4">
                    <a href="" class="hidden-md hidden-lg hidden-xs"
                       style="font-size:2em;float:right;margin-top:15px;margin-left:20px">
                        <span class="glyphicon glyphicon-off">
                        </span>
                    </a>
                    <a href="" class="hidden-md hidden-lg" style="font-size:2em;float:right;margin-top:15px;margin-left:20px">
                        <span class="glyphicon glyphicon-cog">
                        </span>
                    </a>
                    <a href="javascript:;" class="hidden-md hidden-lg" id="dropdownMenu" style="font-size:2em;float:right;margin-top:15px">
                        <span class="glyphicon glyphicon-th-large">
                        </span>
                    </a>
                    <div class="nav hidden-xs hidden-sm">
                        <ul>
                            <li>
                                <a href="">
                                    <span class="glyphicon glyphicon-off">
                                    </span>
                                    &nbsp;登出
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <span class="glyphicon glyphicon-cog">
                                    </span>
                                    &nbsp;系统设置
                                </a>
                            </li>
                            <li class="dropdown">
                                <a href="/" target="_blank">
                                    <span class="glyphicon glyphicon-home">
                                    </span>
                                    &nbsp;返回网站
                                </a>
                                <span class="v-line">
                                    |
                                </span>
                                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown"
                                   role="button" aria-haspopup="true" aria-expanded="false">
                                    账号
                                    &nbsp;@Model.Adminname
                                    <span class="caret">
                                    </span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="">
                                            <span class="glyphicon glyphicon-user">
                                            </span>
                                            &nbsp;账号列表
                                        </a>
                                    </li>
                                    <li>
                                        <a href="">
                                            <span class="glyphicon glyphicon-lock">
                                            </span>
                                            &nbsp;修改密码
                                        </a>
                                    </li>
                                    <li>
                                        <a href="">
                                            <span class="glyphicon glyphicon-time">
                                            </span>
                                            &nbsp;登陆日志
                                        </a>
                                    </li>
                                    <li role="separator" class="divider">
                                    </li>
                                    <li>
                                        <a href="">
                                            <span class="glyphicon glyphicon-bookmark">
                                            </span>
                                            &nbsp;邮件模板
                                        </a>
                                    </li>
                                    <li>
                                        <a href="">
                                            <span class="glyphicon glyphicon-list-alt">
                                            </span>
                                            &nbsp;通知记录
                                        </a>
                                    </li>
                                    <li>
                                        <a href="">
                                            <span class="glyphicon glyphicon-transfer">
                                            </span>
                                            &nbsp;补发订单
                                        </a>
                                    </li>
                                    <li role="separator" class="divider">
                                    </li>
                                    <li>
                                        <a href="">
                                            <span class="glyphicon glyphicon-off">
                                            </span>
                                            &nbsp;安全退出
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="top-nav" class="hidden-xs hidden-sm">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-9 col-md-offset-2 col-sm-11">
                    <ul>
                        <li><a href="">管理首页</a></li>
                        <li><a href=""></a></li>
                    </ul>
                </div>
                <div class="col-md-1 col-sm-1 text-right btn-config">
                    <a href="">
                        <span class="glyphicon glyphicon-cog">
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div id="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2">
                    <div class="left-nav hidden-xs hidden-sm" id="menu">
                        <!--菜单栏填充区-->
                        @Html.Raw(ViewBag.MenuNav)
                        <dl class="hidden-md hidden-lg">
                            <dt>
                                <span class="glyphicon glyphicon-cog">
                                </span>
                                &nbsp;管理员
                            </dt>
                            <dd>
                                <a href="">
                                    <span class="glyphicon glyphicon-user">
                                    </span>
                                    &nbsp;账号列表
                                </a>
                            </dd>
                            <dd>
                                <a href="">
                                    <span class="glyphicon glyphicon-lock">
                                    </span>
                                    &nbsp;修改密码
                                </a>
                            </dd>
                            <dd>
                                <a href="">
                                    <span class="glyphicon glyphicon-time">
                                    </span>
                                    &nbsp;登陆日志
                                </a>
                            </dd>
                            <dd role="separator" class="divider">
                            </dd>
                            <dd>
                                <a href="">
                                    <span class="glyphicon glyphicon-bookmark">
                                    </span>
                                    &nbsp;邮件模板
                                </a>
                            </dd>
                            <dd>
                                <a href="">
                                    <span class="glyphicon glyphicon-list-alt">
                                    </span>
                                    &nbsp;通知记录
                                </a>
                            </dd>
                            <dd>
                                <a href="">
                                    <span class="glyphicon glyphicon-transfer">
                                    </span>
                                    &nbsp;补发订单
                                </a>
                            </dd>
                            <dd role="separator" class="divider">
                            </dd>
                            <dd>
                                <a href="/Login/logout">
                                    <span class="glyphicon glyphicon-off">
                                    </span>
                                    &nbsp;安全退出
                                </a>
                            </dd>
                        </dl>
                    </div>
                </div>
                <iframe src="" id="rightContent" class="col-md-10" style="min-height:1000px;border-width:0px;border-top-width:0px;background-color:white;"></iframe>
            </div>
        </div>
    </div>
    <div id="footer">
        &copy;&nbsp;2019&nbsp;菠萝妹&nbsp;Powered by www.dblsuo1688.com
    </div>
    <div class="modal" id="waModal" role="dialog" aria-labelledby="waModalLable">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">
                            &times;
                        </span>
                    </button>
                    <h4 class="modal-title">
                        Modal title
                    </h4>
                </div>
                <div class="modal-body" id="contentShow">
                </div>
            </div>
        </div>
    </div>
    <script src="~/common/jquery-1.12.1.min.js" type="text/javascript"></script>
    <script src="~/common/jquery.zclip.min.js" type="text/javascript"></script>
    <script src="~/common/datetimepicker.min.js" type="text/javascript"></script>
    <script src="~/common/bootstrap.min.js"></script>
    <script src="~/common/app.js" type="text/javascript"></script>
    <script src="~/common/framework.js"></script>
    <script src="~/common/jquery.session.js"></script>
</body>
</html>
<script type="text/javascript">
    $(function () {
        var action = $.session.get('action');
        if (action == undefined) {
            action = "/Home/Privacy";
        }
        document.getElementById("rightContent").src = action;
        $('#menu a').click(function () {
            $("#rightContent").attr("src", "");
            var action = $(this).attr("name");
            $("#rightContent").attr("src", action);
            $.session.set('action', action);
        });

        $('#home').click(function () {
            $.session.clear();
            $("#rightContent").attr("src", "/Home/Privacy");
        });

        $('#dropdownMenu').click(function () {
            if ($('.left-nav').is(':visible')) {
                $('.left-nav').addClass('hidden-sm hidden-xs').hide();
            } else {
                $('.left-nav').removeClass('hidden-sm hidden-xs').show();
            }
        });
    })
</script>

